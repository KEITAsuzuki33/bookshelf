<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>

  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <% if post.image? %>
    　     <td><%=  image_tag post.image.url%></td>
    　   <% else %>
    　     <td><%=  image_tag "no_image300" %></td>
        <% end %>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= post.body %></td>
        <% if post.favorited_by? current_user %>
        <td>
          <%= link_to "", post_favorites_path(post), method: :delete ,class: 'glyphicon glyphicon-star' %>
          <%= post.favorites.count %>いいね
        </td>
        <% else %>
        <td>
          <%= link_to "", post_favorites_path(post), method: :post ,class: 'glyphicon glyphicon-star-empty' %>
          <%= post.favorites.count %>いいね
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>